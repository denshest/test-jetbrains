{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "baseUrl": "src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/layouts/*": ["layouts/*"],
      "@/public/*": ["public/*"],
      "@/styles/*": ["styles/*"],
      "@/pages/*": ["pages/*"],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
  ]
}
