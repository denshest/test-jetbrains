{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": false,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "baseUrl": "src",
    "paths": {
      "@/contexts/*": ["contexts/*"],
      "@/components/*": ["components/*"],
      "@/layouts/*": ["layouts/*"],
      "@/lib/*": ["lib/*"],
      "@/public/*": ["public/*"],
      "@/styles/*": ["styles/*"],
      "@/pages/*": ["pages/*"],
      "@/types/*": ["types/*"]
    }
  },
  "include": [
    "src",
    "frontend/src/types/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
